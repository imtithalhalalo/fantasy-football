datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  team     Team?
}

model Team {
  id        Int       @id @default(autoincrement())
  name      String
  budget    Int
  user      User      @relation(fields: [userId], references: [id])
  userId    Int       @unique
  players   Player[]
}

model Player {
  id           Int     @id @default(autoincrement())
  name         String
  position     String
  price        Int
  teamId       Int
  team         Team    @relation(fields: [teamId], references: [id])

  isForSale    Boolean @default(false)
  askingPrice  Int?
}

